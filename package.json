{
  "name": "template-react-project",
  "version": "1.0.0",
  "description": "Teamplate for React projects",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "start": "node dist/bundle.js",
    "dev": "webpack-dev-server --mode development",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RichardMoralesLuis/Template-React-Porjects"
  },
  "author": "Richard Morales Luis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RichardMoralesLuis/React-Football-Simulator/issues"
  },
  "homepage": "https://github.com/RichardMoralesLuis/Teamplate-React-Project#readme",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.14.8",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/webpack": "^4.4.32",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^24.8.0",
    "jest-css-modules": "^2.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^9.4.2",
    "typescript": "^2.8.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.6.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFiles": [
      "<rootDir>/config/jest/setup.js"
    ]
  }
}
